{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom",
            "es2017"
        ],
        "target": "es5",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
          ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}